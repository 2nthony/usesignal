{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@usesignal/core": ["./packages/core/index.ts"],
      "@usesignal/core/*": ["./packages/core/*"]
    },
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "*.tsx",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
