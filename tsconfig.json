{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "webworker"
    ],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@usesignal/core": [
        "./packages/core/index.ts"
      ],
      "@usesignal/core/*": [
        "./packages/core/*"
      ]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "packages",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist",
    "cosmos.imports.ts"
  ]
}
